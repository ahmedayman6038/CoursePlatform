@model CoursePlatform.ViewModels.AdminLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>تسجيل الدخول</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/rtl/bootstrap.min.css" rel="stylesheet" />

    <!-- not use this in ltr -->
    <link href="~/Content/rtl/bootstrap.rtl.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/rtl/sb-admin-2.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">تسجيل الدخول</h3>
                    </div>
                    <div class="panel-body">
                        <form class="form-wrap" action="/Dashboard/Login?returnUrl=@ViewBag.ReturnUrl" method="post">
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "اسم المستخدم", @autofocus = "" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "كلمة المرور" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="">
                                    @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { @class = "" } })
                                    @Html.LabelFor(model => model.RememberMe)
                                </div>
                                <span class="errors text-danger" style="display:block;padding-bottom:15px">
                                    @ViewBag.ModelErrors
                                </span>
                                <input type="submit" value="دخول" class="btn btn-lg btn-primary btn-block" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery Version 1.11.0 -->
    <script src="~/Scripts/jquery-1.11.0.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrapv3.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/sb-admin-2.js"></script>

</body>
</html>
