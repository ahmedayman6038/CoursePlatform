@model CoursePlatform.ViewModels.Tarbea
@{
    ViewBag.Title = "تفاصيل التسجيل";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">تفاصيل</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    التسجيل
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            @if (Model == null)
                            {
                                <h3>لم يتم العثور على اى بيانات</h3>
                            }
                            else
                            {
                                var fromDate = Model.DurationFrom.ToString("MM/dd/yyyy");
                                var toDate = Model.DurationTo.ToString("MM/dd/yyyy");
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.StudentName)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.StudentName)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.NationalID)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.NationalID)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.StudentUniversity)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.StudentUniversity)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.StudentFacuty)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.StudentFacuty)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.LevelName)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.LevelName)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Section)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Section)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.PhoneNumber)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.TelephoneNumber)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.TelephoneNumber)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Address)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.DurationFrom)
                                    </dt>

                                    <dd>
                                        @fromDate
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.DurationTo)
                                    </dt>

                                    <dd>
                                        @toDate
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.SerialNumber)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.SerialNumber)
                                    </dd>

                                    <dt>
                                        استمارة التسجيل
                                    </dt>

                                    <dd>
                                        <a href="/Student/DownloadRegistrationForm/@ViewBag.CourseId?rid=@ViewBag.RegistrationId">تحميل</a>
                                    </dd>

                                    <dt>
                                        النتيجة
                                    </dt>

                                    <dd>
                                        @if (Model.ResultId != null && Model.ResultId != ViewBag.FaildId )
                                        {
                                            <a href="/Student/DownloadResultForm/@ViewBag.CourseId?rid=@ViewBag.RegistrationId">تحميل</a>
                                        }
                                    </dd>
                                </dl>
                            }

                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
