@model CoursePlatform.ViewModels.Tarbea
@{
    ViewBag.Title = "التسجيل فى التربية العسكرية";
}

<section class="search-course-area relative bg-banner">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6 search-course-right section-gap animated fadeIn">
                <form class="form-wrap" id="" action="/Student/TarbeaRegistration" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="text-white pb-20 text-center mb-10">تسجيل التربية العسكرية</h4>
                    @Html.HiddenFor(model => model.StudentUniversity)
                    @Html.DropDownList("DurationID", null, htmlAttributes: new { @class = "form-control", @placeholder = "الفترة", @style = "padding-top: 5px;" })
                    @Html.ValidationMessageFor(model => model.DurationID, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.NationalID, new { htmlAttributes = new { @class = "form-control", @placeholder = "الرقم القومى", @maxlength = "14", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.NationalID, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control", @placeholder = "الاسم", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger errors", @id = "code-error" })
                    @Html.EditorFor(model => model.StudentFacuty, new { htmlAttributes = new { @class = "form-control", @placeholder = "الكلية", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.StudentFacuty, "", new { @class = "text-danger errors", @id = "code-error" })
                    @Html.EditorFor(model => model.LevelName, new { htmlAttributes = new { @class = "form-control", @placeholder = "المستوى", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.LevelName, "", new { @class = "text-danger errors", @id = "code-error" })
                    @Html.EditorFor(model => model.Section, new { htmlAttributes = new { @class = "form-control", @placeholder = "القسم" } })
                    @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "العنوان" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.TelephoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "تليفون المنزل", @maxlength = "10" } })
                    @Html.ValidationMessageFor(model => model.TelephoneNumber, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "المحمول", @maxlength = "11", @readonly = "" } })
                    <span class="errors text-danger">
                        @ViewBag.ModelErrors
                    </span>
                    <input type="submit" value="تسجيل" class="primary-btn text-uppercase" />
                </form>
            </div>
        </div>
    </div>
</section>

