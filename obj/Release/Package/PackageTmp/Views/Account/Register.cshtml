@model CoursePlatform.ViewModels.Register
@{
    ViewBag.Title = "تسجيل";
}


<section class="search-course-area relative bg-banner">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6 search-course-right section-gap animated fadeIn">
                <form class="form-wrap" id="RegisterForm" action="/Account/Register" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="text-white pb-20 text-center mb-10">تسجيل عضو جديد</h4>
                    @Html.EditorFor(model => model.StudentCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "رقم الطالب", @maxlength = "14" } })
                    @Html.ValidationMessageFor(model => model.StudentCode, "", new { @class = "text-danger errors", @id = "code-error" })
                    @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control", @placeholder = "الاسم", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger errors", @id = "code-error" })
                    @Html.EditorFor(model => model.StudentFaculty, new { htmlAttributes = new { @class = "form-control", @placeholder = "الكلية", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.StudentFaculty, "", new { @class = "text-danger errors", @id = "code-error" })
                    @Html.DropDownList("LevelName", null, htmlAttributes: new { @class = "form-control", @placeholder = "المستوى",@style = "padding-top: 5px;" })
                    @Html.ValidationMessageFor(model => model.LevelName, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.NationalID, new { htmlAttributes = new { @class = "form-control", @placeholder = "الرقم القومى", @maxlength = "14" } })
                    @Html.ValidationMessageFor(model => model.NationalID, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.StudentEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "الايميل" } })
                    @Html.ValidationMessageFor(model => model.StudentEmail, "", new { @class = "text-danger errors" })
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "الرقم المحمول" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger errors" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "كلمة المرور" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger errors" })
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "تاكيد كلمة المرور" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger errors" })
                    <span class="errors text-danger">
                        @ViewBag.ModelErrors
                    </span>
                    <input type="submit" value="تسجيل" class="primary-btn text-uppercase" />
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End search-course Area -->
