@model CoursePlatform.ViewModels.Login
@{
    ViewBag.Title = "تسجيل الدخول";
}


<section class="search-course-area relative bg-banner">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6 search-course-right section-gap animated fadeIn">
                <form class="form-wrap" action="/Account/Login?returnUrl=@ViewBag.ReturnUrl" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="text-white pb-20 text-center mb-10">تسجيل الدخول</h4>
                    @Html.EditorFor(model => model.StudentCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "رقم الطالب", @maxlength = "14" } })
                    @Html.ValidationMessageFor(model => model.StudentCode, "", new { @class = "text-danger errors" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "كلمة المرور" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger errors" })
                    <span class="errors text-danger">
                        @ViewBag.ModelErrors
                    </span>
                    <input type="submit" value="تسجيل" class="primary-btn text-uppercase" />
                    <p style="text-align:center;margin-top:10px;margin-bottom:5px">
                        <a href="/Account/ForgetPassword" style="font-weight:bold;">نسيت كلمة المرور؟</a>
                    </p>
                    <p style="text-align:center;margin-bottom:0px">
                        <a href="/Account/Register" style="font-weight:bold;">تسجيل عضو جديد</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End search-course Area -->