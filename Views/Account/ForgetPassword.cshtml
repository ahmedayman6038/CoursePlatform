@model CoursePlatform.ViewModels.ForgetPassword

@{
    ViewBag.Title = "اعادة كلمة المرور";
}

<section class="search-course-area relative bg-banner">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6 search-course-right section-gap animated fadeIn">
                <form class="form-wrap" action="/Account/ForgetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="text-white pb-20 text-center mb-10">اعادة كلمة المرور</h4>
                    @Html.EditorFor(model => model.StudentEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "البريد الالكترونى" } })
                    @Html.ValidationMessageFor(model => model.StudentEmail, "", new { @class = "text-danger errors" })
                    <span class="errors text-danger">
                        @ViewBag.ModelErrors
                    </span>
                    <input type="submit" value="ارسال" class="primary-btn text-uppercase" />
                </form>
            </div>
        </div>
    </div>
</section>

